
{
  "servers": {
    "context7": {
      "type": "http",
      "url": "https://mcp.context7.com/mcp"
    },
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/"
    },
    "microsoft.docs.mcp": {
      "type": "http",
      "url": "https://learn.microsoft.com/api/mcp"
    },
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ]
    },
    "deepwiki": {
      "url": "https://mcp.deepwiki.com/sse"
    },
    "agent-mail": {
      "type": "http",
      "url": "http://127.0.0.1:8765/mcp",
      "headers": {
        "Authorization": "Bearer ${input:agentMailToken}"
      }
    }
  },
  "inputs": {
    "agentMailToken": {
      "type": "promptString",
      "description": "Agent Mail bearer token (from ~/.agent_mail_token or server startup)",
      "password": true
    }
  }
}
